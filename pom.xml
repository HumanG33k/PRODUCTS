<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- Basic informations about the app -->
  <groupId>com.martinheywang</groupId>
  <artifactId>MavenProducts</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <!-- The project -->
  <name>MavenProducts</name>
  <description>
  	Products is a game, where you can build devices to become wealthy. Create assembly lines. Build, earn, build... !
  </description>
  <url>http://maven.apache.org</url>

  <!-- Default encoding of cp1252 (this is the default encoding of my IDE -->
  <properties>
    <project.build.sourceEncoding>cp1252</project.build.sourceEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
	<maven.compiler.target>1.8</maven.compiler.target>
  </properties>
  
  <!-- Build -->
  <build>
  	<pluginManagement>
  	<plugins>
  	<!-- Plugin responsable de la génération du fichier JAR -->
    	<plugin>
    		<groupId>org.apache.maven.plugins</groupId>
    		<artifactId>maven-jar-plugin</artifactId>
    		<version>3.0.2</version>
    	</plugin>
    	<!-- To create for javafx runnable jar files -->
    	<plugin>
    		<groupId>com.zenjava</groupId>
      		<artifactId>javafx-maven-plugin</artifactId>
      		<version>1.3</version>
      		<configuration>
          	<mainClass>com.martinheywang.Main</mainClass>
      </configuration>
    	</plugin>
    </plugins>
  </pluginManagement>
  <plugins>
  	<plugin>
    	<groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
        	<archive>
                <manifest>
                	<mainClass>com.martinheywang.Main</mainClass>
                </manifest>
            </archive>
        </configuration>
     </plugin>
   </plugins>
   <resources>
   	<resource>
   		<directory>src/main/resources</directory>
   		<filtering>true</filtering>
   	</resource>
   </resources>
  </build>

  <!-- All dependencies of my project -->
  <dependencies>
  <!-- JUnit default -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13</version>
      <scope>test</scope>
    </dependency>
    
    <!-- SQLite JDBC -->
    <dependency>
    	<groupId>org.xerial</groupId>
    	<artifactId>sqlite-jdbc</artifactId>
    	<version>3.30.1</version>
	</dependency>
    
    <!-- ORMLite core and jdbc -->
	<dependency>
    	<groupId>com.j256.ormlite</groupId>
    	<artifactId>ormlite-core</artifactId>
    	<version>5.1</version>
	</dependency>
	<dependency>
    	<groupId>com.j256.ormlite</groupId>
    	<artifactId>ormlite-jdbc</artifactId>
    	<version>5.1</version>
	</dependency>
	
	<!-- JavaFX -->
	<dependency>
    	<groupId>org.openjfx</groupId>
    	<artifactId>javafx-controls</artifactId>
    	<version>15-ea+4</version>
	</dependency>
		<dependency>
    	<groupId>org.openjfx</groupId>
    	<artifactId>javafx-graphics</artifactId>
    	<version>15-ea+4</version>
	</dependency>
		<dependency>
    	<groupId>org.openjfx</groupId>
    	<artifactId>javafx-base</artifactId>
    	<version>15-ea+4</version>
	</dependency>
	<dependency>
    	<groupId>org.openjfx</groupId>
    	<artifactId>javafx-fxml</artifactId>
    	<version>15-ea+4</version>
	</dependency>
	<dependency>
    	<groupId>org.openjfx</groupId>
    	<artifactId>javafx-media</artifactId>
    	<version>15-ea+4</version>
	</dependency>
	
  </dependencies>
</project>
