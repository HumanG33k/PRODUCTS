<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="200.0" minWidth="350.0" prefHeight="500.0" prefWidth="700.0" stylesheets="@Game.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.martin.view.JeuContrôle">
   <center>
      <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ScrollPane fitToHeight="true" fitToWidth="true" stylesheets="@ScrollPane.css">
               <content>
                  <GridPane fx:id="grille" gridLinesVisible="true">
            </GridPane>
               </content>
            </ScrollPane>
            <Label fx:id="report" alignment="TOP_LEFT" focusTraversable="false" maxHeight="-Infinity" maxWidth="275.0" prefHeight="100.0" prefWidth="275.0" style="-fx-border-color: #1c8dff; -fx-border-width: 0.3em;" text="Conseil : Pour construire un appareil, sélectionner une case, et via la fenêtre dédiée, sélectionnez l'appareil voulu." wrapText="true" StackPane.alignment="BOTTOM_RIGHT">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <StackPane.margin>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </StackPane.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Label>
         </children>
      </StackPane>
   </center>
   <top>
      <StackPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
         <children>
            <Label fx:id="argentLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-border-color: white;" text="Argent non disponible pour le moment, veuillez patientez...">
               <font>
                  <Font size="13.0" />
               </font>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
            </Label>
            <ProgressBar fx:id="progression" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" progress="0.0">
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
            </ProgressBar>
         </children>
      </StackPane>
   </top>
   <bottom>
      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Button minHeight="10" mnemonicParsing="false" text="Recherche" onAction="#research">
               <HBox.margin>
                  <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
               </padding>
            </Button>
            <Button minHeight="10" fx:id="upgradeGridButton" mnemonicParsing="false" text="Améliorer la grille" onAction="#upgradeGrid">
               <HBox.margin>
                  <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
               </padding>
            </Button>
            <Button minHeight="10" mnemonicParsing="false" text="Retourner à l'accueil" onAction="#returnToHome">
               <HBox.margin>
                  <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
               </padding>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
