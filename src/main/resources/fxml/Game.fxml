<HBox minHeight="550.0" minWidth="700.0" prefHeight="600.0" prefWidth="800.0" stylesheets="@General.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.martinheywang.view.GameController">
   <children>
      <StackPane HBox.hgrow="ALWAYS">
         <children>
            <AnchorPane>
               <children>
                  <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="35.0">
                     <content>
                        <GridPane fx:id="grid" />
                     </content>
                  </ScrollPane>
                  <VBox fx:id="toasts" alignment="BOTTOM_RIGHT" maxHeight="150.0" maxWidth="1.7976931348623157E308" minWidth="150.0" spacing="10.0" style="-fx-background-color: transparent;" stylesheets="@Label.css" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </children>
            </AnchorPane>
            <AnchorPane fx:id="sidebar" maxHeight="35.0" StackPane.alignment="TOP_CENTER">
               <children>
                  <ProgressBar fx:id="progression" minHeight="30.0" progress="0.19" style="-fx-border-color: #eee;" stylesheets="@ProgressBar.css" AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="2.0">
                     <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </padding>
                  </ProgressBar>
                  <Label fx:id="moneyLabel" alignment="CENTER" minHeight="30.0" style="-fx-border-color: #eee;" styleClass="h6" stylesheets="@Label.css" text="Argent indisponible, veuillez patientez..." AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="2.0">
                     <padding>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                     </padding>
                  </Label>
               </children>
            </AnchorPane>
         </children>
      </StackPane>
      <AnchorPane maxWidth="1.7976931348623157E308" minHeight="-Infinity" style="-fx-background-color: #004B07;" HBox.hgrow="NEVER">
         <children>
            <VBox layoutX="10.0" layoutY="10.0" style="-fx-background-color: #005708;" stylesheets="@Box.css" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
               <children>
                  <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="h5" stylesheets="@Label.css" text="Options :" VBox.vgrow="NEVER">
                     <padding>
                        <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
                     </padding>
                  </Label>
                  <Accordion VBox.vgrow="ALWAYS">
                     <stylesheets>
                        <URL value="@Accordion.css" />
                        <URL value="@TitledPane.css" />
                     </stylesheets>
                     <panes>
                        <TitledPane expanded="false" prefHeight="200.0" prefWidth="200.0" text="Recherche">
                           <graphic>
                              <ImageView fx:id="research_icon" fitHeight="30.0" fitWidth="30.0">
                                 <image>
                                    <Image url="@../images/icons/research.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </TitledPane>
                        <TitledPane prefHeight="200.0" prefWidth="200.0" text="Grille">
                           <graphic>
                              <ImageView fx:id="grid_icon" fitHeight="30.0" fitWidth="30.0">
                                 <image>
                                    <Image url="@../images/icons/grid_update.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </TitledPane>
                        <TitledPane prefHeight="200.0" prefWidth="200.0" text="Modificateurs">
                           <graphic>
                              <ImageView fx:id="edit_icon" fitHeight="30.0" fitWidth="30.0">
                                 <image>
                                    <Image url="@../images/icons/add.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </TitledPane>
                     </panes>
                  </Accordion>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</HBox>
