<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../css/Home.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.martinheywang.view.Home2">
   <top>
      <VBox maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="important" text="PRODUCTS.">
               <font>
                  <Font size="60.0" />
               </font>
            </Label>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="important" text="Content de vous revoir, gérant(e) ! Que voulez-vous faire ?">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <TitledPane maxHeight="300.0" style="-fx-box-border: transparent" animated="false" collapsible="false" text="Sélectionnez une partie ci-dessous..." VBox.vgrow="ALWAYS">
               <content>
                  <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-border-color: white;" stylesheets="@../css/ScrollPane.css" vbarPolicy="ALWAYS">
                     <content>
                        <VBox fx:id="listePartie" maxWidth="1.7976931348623157E308" spacing="2.0" />
                     </content>
                  </ScrollPane>
               </content>
               <font>
                  <Font size="16.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </VBox.margin>
            </TitledPane>
            <TitledPane style="-fx-box-border: transparent" animated="false" collapsible="false" text="Ou créez-en une nouvelle !">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="3.0">
                     <children>
                        <TextField fx:id="field" promptText="Nom de la nouvelle partie (pour votre confort, ni trop long, ni déja existant...)" />
                        <Button alignment="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Créer et lancer la nouvelle partie maintenant" textAlignment="CENTER" VBox.vgrow="ALWAYS" onAction="#nouvelle"/>
                     </children>
                  </VBox>
               </content>
               <font>
                  <Font size="16.0" />
               </font>
            </TitledPane>
         </children>
      </VBox>
   </center>
</BorderPane>
