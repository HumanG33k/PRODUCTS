<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 5.4//EN" 
	"http://www.hibernate.org/dtd/hibernate-mapping">
	
<!-- Hibernate Mapping File -->
<hibernate-mapping>
	<!-- To class : com.martin.model.appareils.Appareil -->
	<class name="com.martin.model.appareils.DeviceModel" table="devices">
		<!-- Our class id who uses an auto-increment generator -->
		<id name="idAppareilModel" column="idAppareilModel" type="long">
			<generator class="increment"/>
		</id>
		
		<!-- Foreign key to class com.martin.model.Coordonnees -->
		<many-to-one name="coordinates" class="com.martin.model.Coordinates" column="idCoordonnees" 
			not-null="true"/>
		<!-- Foreign key to class com.martin.model.Game -->
		<many-to-one name="game" class="com.martin.model.Game" column="idPartie" 
			not-null="true"/>
		
		
		<!-- The type (also an enum type) -->
		<property name="type">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.martin.model.appareils.Type</param>
				<param name="useNamed">true</param>
			</type>
		</property>
		
		<!-- The level (again an enum type) -->
		<property name="niveau">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.martin.model.appareils.Level</param>
				<param name="useNamed">true</param>
			</type>
		</property>
		
		<!-- The Direction (also enum type) -->
		<property name="direction">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.martin.model.appareils.Direction</param>
				<param name="useNamed">true</param>
			</type>
		</property>
		
		
	</class>
</hibernate-mapping>